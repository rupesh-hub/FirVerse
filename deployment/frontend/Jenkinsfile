pipeline {
    agent {
        docker {
            image 'docker:24-dind'  // DinD with Docker CLI
            args '--privileged -v /var/lib/docker:/var/lib/docker'
        }
    }

    environment {
        DOCKER_HUB_CREDENTIALS_ID = 'docker-hub-credentials'
        DOCKER_REPO = 'rupesh1997'
        PROJECT_NAME = 'fit-verse-frontend'
        PROJECT_VERSION = '1.0.0'
    }

    stages {
        stage("Install Node & npm") {
            steps {
                sh '''
                    apk add --no-cache nodejs npm bash curl
                    node -v
                    npm -v
                '''
            }
        }

        stage("Checkout repository") {
            steps {
                git url: 'https://github.com/rupesh-hub/FirVerse.git', branch: 'main'
            }
        }

        stage("Extract project version") {
            steps {
                dir('frontend') {
                    script {
                        env.PROJECT_VERSION = sh(
                            script: "node -p \"require('./package.json').version\" || echo ''",
                            returnStdout: true
                        ).trim()
                        if (!env.PROJECT_VERSION) { env.PROJECT_VERSION = "1.0.0" }
                    }
                }
                echo "âœ” Frontend version: ${env.PROJECT_VERSION}"
            }
        }

        stage("Install dependencies & Build Angular") {
            steps {
                dir('frontend') {
                    sh '''
                        npm ci
                        npm run build -- --configuration production
                    '''
                }
            }
        }

        stage("Build Docker Image") {
            steps {
                sh """
                    docker build \
                        -t ${DOCKER_REPO}/${PROJECT_NAME}:${PROJECT_VERSION} \
                        -t ${DOCKER_REPO}/${PROJECT_NAME}:latest \
                        -f ./docker/frontend/Dockerfile .
                """
            }
        }

        stage("Trivy Scan") {
            steps {
                sh '''
                    curl -sfL https://raw.githubusercontent.com/aquasecurity/trivy/main/contrib/install.sh | sh
                    trivy image --exit-code 0 --severity HIGH,CRITICAL ${DOCKER_REPO}/${PROJECT_NAME}:${PROJECT_VERSION}
                '''
            }
        }

        stage("Docker Hub Login & Push") {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: env.DOCKER_HUB_CREDENTIALS_ID,
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASSWORD'
                )]) {
                    sh '''
                        echo "$DOCKER_PASSWORD" | docker login -u "$DOCKER_USER" --password-stdin
                        docker push ${DOCKER_REPO}/${PROJECT_NAME}:${PROJECT_VERSION}
                        docker push ${DOCKER_REPO}/${PROJECT_NAME}:latest
                    '''
                }
            }
        }
    }
}
